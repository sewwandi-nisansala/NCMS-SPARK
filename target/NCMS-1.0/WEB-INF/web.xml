<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.PatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MohController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.MohController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.DoctorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HospitalController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.HospitalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.StatController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HospitalListController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.HospitalListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorListController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.DoctorListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientListController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.PatientListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserListController</servlet-name>
        <servlet-class>lk.sparkx.ncms.controllers.UserListController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/profile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientController</servlet-name>
        <url-pattern>/patient/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MohController</servlet-name>
        <url-pattern>/moh/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorController</servlet-name>
        <url-pattern>/doctor/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HospitalController</servlet-name>
        <url-pattern>/hospital/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatController</servlet-name>
        <url-pattern>/stats/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HospitalListController</servlet-name>
        <url-pattern>/lists/hospitals/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorListController</servlet-name>
        <url-pattern>/lists/doctors/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientListController</servlet-name>
        <url-pattern>/lists/patients/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserListController</servlet-name>
        <url-pattern>/lists/users/*</url-pattern>
    </servlet-mapping>
</web-app>